<UserControl x:Class="RockEnroll.SelectionComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RockEnroll"
             mc:Ignorable="d" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Name="sectionType" Grid.Column="0" Content="" FontSize="9" VerticalAlignment="Center" Margin="1,1,0,0"/>
        <ComboBox Name="sections" Grid.Column="1"  VerticalAlignment="Center" Margin="1,1,0,0"/>
        <Button Name="pin" Grid.Column="2" Margin="1,1,0,0" VerticalAlignment="Center" MinHeight="16" MinWidth="18">
            <Button.BorderBrush>
                <ImageBrush/>
            </Button.BorderBrush>
            <Button.Background>
                <ImageBrush ImageSource="/Resources/pin.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>


    </Grid>
</UserControl>
