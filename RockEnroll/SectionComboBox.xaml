<UserControl x:Class="RockEnroll.SectionComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RockEnroll">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Name ="section"  Content="SEC:" FontSize="9" HorizontalAlignment="Left" MinWidth="20" Grid.Column="0"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="56" MinHeight="16" Grid.Column="1" Margin="0,2,0,2"/>
        <Button  VerticalAlignment="Center" MinHeight="16" MinWidth="18" Grid.Column="2">
            <Button.BorderBrush>
                <ImageBrush/>
            </Button.BorderBrush>
            <Button.Background>
                <ImageBrush ImageSource="Resources\pin.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
    </Grid>
</UserControl>
